<h2> Edit Task </h2>

<% if @task.errors.any? %>
<ul class="errors">
  <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= simple_form_for @task do |f| %>
  <%= f.input :content, required: true%>

  <%= f.button :submit, class: 'btn btn-primary' %>

<% end %>
