<% if @task.errors.any? %>
<ul class="errors">
  <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= simple_form_for @task do |f| %>
  <%= f.input :content, required: true%>
  <%= f.input :state%>

  <%= f.button :submit, class: 'btn btn-primary' %>

<% end %>
<hr>
<p><%= link_to 'All Tasks  ', tasks_path %></p>
