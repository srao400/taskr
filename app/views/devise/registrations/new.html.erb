
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<h2 class="text-center">Sign up</h2>
  <%= f.error_notification %>

  <div class="form-inputs form-control form-signin">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email' %>
    <%= f.input :password, required: true, label: false, placeholder: 'password', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Re-enter password' %>

    <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
